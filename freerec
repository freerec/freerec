lib_dir = File.dirname(__FILE__)+'/lib'
$LOAD_PATH.unshift lib_dir

require 'etc'
require 'gst'
require 'gtk2'

require 'freerec/controller/main'
require 'freerec/l18n'
require 'freerec/model/recorder'
require 'freerec/model/song-player'

Gst.init

FreeRec::L18n.init

home = Etc.getpwuid.dir

# TODO Make this configurable.
FreeRec::Model::Recorder.output_dir = home+'/freerec/recordings'
FreeRec::Model::SongPlayer.songs_dir = home+'/freerec/songs'

FreeRec::Controller::Main.new do
  Gtk.main
end

